<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]DelaJob</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header style="background-color: rgb(148, 84, 180);">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand text-light col-7 ml-3" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/delajob-logo-site.png"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Sobre" asp-action="Sobre">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Vagas" asp-action="Vagas">Vagas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Contato" asp-action="Contato">Contato</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light border-left ml-4 pl-4" asp-area="" asp-controller="Login" asp-action="Login">Entrar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Cadastro" asp-action="Cadastro">Cadastre-se</a>
                        </li>
                    </ul>
                </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div style="background-color: rgb(148, 84, 180);">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-lg-5">
                        <li class="nav-item mr-lg-5 ml-lg-5">
                            <a class="nav-link text-light" href="#">Políticas de Privacidade</a>
                        </li>
                        <li class="nav-item ml-lg-5 mr-lg-5">
                            <a class="nav-link text-light" href="#">FAQ</a>
                        </li>
                        <li class="nav-item ml-lg-5">
                            <a class="nav-link text-light" href="#">Termos de Uso</a>
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand text-light col-3" href="#"><img style="height: 30px; width: 30px;" src="~/Images/whatsapp-logo-1.png"></a>
            </nav>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
